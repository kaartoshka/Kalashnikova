import java.util.Scanner; //библиотека через ктр мы моджем писать через клаву
import java.util.Random; //генерироват случайное знач

public class Main { //в классах описываеься то как они рабоатют; в мейне используем фун из класса
    public static void main(String[] args) { //точка входа отсюда начинается читаться и выполняться код
        Scanner in = new Scanner(System.in); //ин - конкретный объект; строка нужна для того чтобы пользоваться библиотекой нам надо создать класс сканер
        System.out.println("Введите высоту матрицы:"); //вывести в консоль сообщение
        int n = in.nextInt(); //инт н - обьъявили пременную; ин - сканер; некстин - метод сканера
        System.out.println("Введите длину матрицы:");
        int m = in.nextInt(); //нехстинт - значит что значения вводим через клаву
        int[][] matrix = createMatrix(n,m); //матрица - списк из списков двумрнвй массив; обратить внмание в самый низ
        printMatrix(matrix); // функция ктр выводит матрицу на экран а ниже это описание выведения матрицы
        int d = 1; //для произвед эл глав диаг; стандартное значение то чему = в начале
        int dUp = 0; //сумма для верхних
        int dDown = 0;
        for (int i = 0; i < matrix.length; i++) { //перебирать каждый эл матр; сначала перебирается вложенный а потом внешний, т.е сначала ж потом и
            for (int j = 0; j < matrix[0].length; j++) { //при каждом переборе проверяются условия ниже
                if (i == j){ //на главной диаг
                    d *= matrix[i][j];
                }else if (i < j){ //если индекс и больше ж то идет в сумму
                    dUp += matrix[i][j]; //сумма выше диаг; эл д + эл матрих ж
                }else if (i > j){
                    dDown += matrix[i][j];
                }
            }
        }
        System.out.println("Произведение элементов на глваной дигонали равно " + d);
        System.out.println("Разность правых верхних и левых нижних эллементов относительно главной дигонали равна " + (d_up - d_down));
    }
    public static void printMatrix (int[][] matrix) {
        for (int i = 0; i < matrix.length; i++) { //длина всей матр - это колво строк
            for (int j = 0; j < matrix[0].length; j++) { //это все эл в стр; в каждой строке перебраем каждый эл
                System.out.print(" " + matrix[i][j] + " ");
            }
            System.out.println(); //отступ
        }
    }

    public static int[][] createMatrix (int n, int m){
        int[][] matrix = new int[n][m]; //создаетсяя матрица м на н и она упстая
        for (int i = 0; i < n; i++){ //индексы, элем; ++ - увеечение на 1; нач с 0 тк это прграм-ие
            for (int j = 0; j < m; j++){
                Random random = new Random(); //создаем объект рандом
                matrix[i][j] = random.nextInt(10); //диапазон
            }
        }
        return matrix;
    }
}
